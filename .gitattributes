# .gitattributes - Ensure consistent line endings across platforms

# Auto detect text files and normalize line endings to LF
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows batch
*.bat text eol=crlf
*.cmd text eol=crlf

# Web
*.html text eol=lf
*.js text eol=lf
*.css text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary

# Git
.gitignore text eol=lf
.gitattributes text eol=lf
